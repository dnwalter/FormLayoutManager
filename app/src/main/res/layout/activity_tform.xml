<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_item_title"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:gravity="center"
        android:text="序号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_left_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_num"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_right_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_num"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_num"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintRight_toRightOf="@id/tv_num"
        app:layout_constraintLeft_toLeftOf="@id/tv_num"
        app:layout_constraintTop_toBottomOf="@id/tv_num"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_left_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rv_num"
        app:layout_constraintBottom_toBottomOf="@id/rv_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rv_num"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_right_form"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rv_num"
        app:layout_constraintBottom_toBottomOf="@id/rv_num"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rv_num"/>
</android.support.constraint.ConstraintLayout>